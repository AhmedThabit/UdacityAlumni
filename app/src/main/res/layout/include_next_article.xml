<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/detail_article_image_next"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@drawable/sample_image_vr"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/view_padding"
        android:contentDescription="@string/next_article_image" />
    <TextView
        android:id="@+id/detail_article_next_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="VR is Coming to Udacity"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/view_padding"/>

</LinearLayout>