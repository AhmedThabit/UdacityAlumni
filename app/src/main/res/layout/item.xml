<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_cardview"
    android:minHeight="@dimen/cardview_min_height"
    android:layout_margin="@dimen/cardview_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/item_image"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="216dp"
            android:layout_height="65dp"
            android:id="@+id/item_title"
            tools:text="The Title of this Article"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintTop_toTopOf="@+id/item_image"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/item_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_author"
            tools:text="Ben Lewis"
            app:layout_constraintLeft_toLeftOf="@+id/item_title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/item_date"
            tools:text="Dec 23"
            android:layout_marginEnd="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_author"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/item_author"
            app:layout_constraintHorizontal_bias="0.17" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>